/* pages/trips/landing.wxss */
page {
  padding-bottom: 180rpx;
}

.header {
  height: 250rpx;
  display: flex;
  justify-content: center;
  font-family: Fira Sans;
}

.header-content-box {
  display: flex;
  flex-direction: column;
  /* color: #E15B99; */
  color: black;
  margin-top: 80rpx;
  font-weight: bold;
  font-size: 48rpx;
}

.logo {
  height: 100rpx;
  width: 120rpx;
  overflow: hidden;
  margin-left: 20rpx;
}

.scroll-view-box-box {
  margin: 0 40rpx;
}

.tags-scroll-view {
  margin-top: 30rpx;
  height: 160rpx;
  /* background-color: blue; */
  /* gap: 40rpx 40rpx; */
  /* display: flex; */
  font-family: Fira Sans;
}

.inner-tag-view {
  display: flex;
  flex-direction: column;
  /* align-content: center; */
  align-items: center;
}

.tag-button {
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  height: 140rpx;
  width: 140rpx;
  margin: 5rpx 20rpx;
  border: 1px solid #E15B99;
  border-radius: 30rpx;
  display: inline-block;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #E15B99;
  margin-top: 16rpx;
  position: relative;
}

.selected-tag-img {
  width: 20px;
  height: 20px;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  border-radius: 50%;
  /* background-color: white; */
}

.tags-scroll-view .tag-button:nth-child(1) {
  margin-left: 10rpx;
}

.tag-img {
  height: 80rpx;
  width: 80rpx;
  margin-bottom: 10rpx;
}

.trip-cards-box {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 50rpx;
  margin: 50rpx;
}


.trip-card {
  position: relative;
  /* overflow: hidden; */
  /* width: 45%;  */
  border-radius: 24rpx;
  width: 300rpx;
  height: 460rpx;
  /* padding: 20rpx; */
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  font-family:'Fira Sans', sans-serif;
  /* font-family: FiraSans-Regular; */

}

/* .trip-cards-box .trip-card:nth-child(1) {
  margin-top: 10rpx;
} */

.image-box {
  display: flex;
  justify-content: center;
}

.trip-image {
  border-radius: 24rpx 24rpx 0 0;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  width: 300rpx;
  height: 300rpx;
  /* margin: 20rpx; */
}

.trip-info {
  /* position: absolute; */
  color: black;
  font-weight: bold;
  margin-top: 18rpx;
  margin-left: 18rpx;
  /* width: 210rpx; */
  display: flex;
  flex-direction: column;
  /* background-color:lightseagreen; */
  height: 140rpx;
}

.trip-title {
  font-size: 26rpx;
}

.trip-start {
  margin-top: 6rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.trip-location-box {
  /* position: absolute; */
  color: #404040;
  font-size: 24rpx;
  font-weight: 500;
  /* font-weight: bold; */
  /* bottom: 20rpx;
  left: 15rpx; */
  /* margin-left: 18rpx; */
  /* width: 240rpx; */
  height: auto;
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 8rpx;
  right: 16rpx;
  /* background-color: red; */
  /* flex-grow: 1; */
}

.location-icon {
  height: 30rpx;
  width: 30rpx;
  margin-right: 5rpx;
}

.favorite-icon {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 30rpx;
  height: 30rpx;
  padding: 8rpx;
  background-color: rgba(255, 214, 224, 1) ;
  border-radius: 50%;
}

