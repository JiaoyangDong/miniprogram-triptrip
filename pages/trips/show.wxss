.container{
  padding: 0;
  /* padding-bottom: 80rpx; */
}

.poster{
  z-index: 1;
  width: 100vw;
  height:550rpx;
  position: sticky;
  top: 0;
}

.head{
  display: flex;
  justify-content: space-between;
}

.home-btn {
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  top: 100rpx;
  left: 30rpx;
  z-index: 5;
  background-color: rgba(255, 255, 255, 1); 
  border-radius: 50%; 
  padding: 15rpx;
}


.h1 {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 800;
  font-size: 50rpx;
  margin: 20 40rpx;
  padding: 20rpx 20rpx 0rpx 0;
  /* margin-top: 30rpx; */
  /* margin-left: 60rpx; */
}

.h2{
  font-weight: 500;
  font-size: 30rpx;
}
.icons{
  padding: 20rpx;
}

.icon{
  width: 70rpx;
  height: 70rpx;
}
.nostyle{
  width: 70rpx ! important; 
  padding: 0 ;
  background-color: transparent;
}

.trip-card{
  z-index: 2;
  border-radius: 50rpx;
  margin-top: -40rpx;
  background-color: white;
  /* border: solid 3px #E15B99; */

  padding: 40rpx;
  padding-bottom: 90rpx;
  min-height: 70vh;
  width: 90vw;
}
.tags{
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0 30rpx 0;
}
.tag{
  /* background-color: tomato; */
  border: #E15B99 1px solid;
  color: #E15B99;
  border-radius: 14rpx;
  padding: 10rpx;
  margin: 5rpx;
  font-size: 24rpx;
}


/* button */
.btn {
  margin: 40rpx;
  min-width: fit-content ;
  /* height: 100rpx; */
  /* padding: 10rpx; */
  border-radius: 32rpx;
  font-family: 'Inter';
  font-style: normal;
  font-weight: 500;
  font-size: 40rpx;
  /* line-height: 60rpx; */
  text-align: center;

}
.btn-primary {
  background: #E15B99;
  color: #FFFFFF; 
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}
.btn-secondary{
  /* padding-top: 10rpx; */
  background: #fce1ee;
  /* border: #E15B99 solid 1px; */
  color: #E15B99; 
  font-size: 40rpx;
  /* box-shadow: 2px 2px 8px #e15b9965; */
}

.trip-host {
  font-weight: bold;
  margin-bottom: 8rpx;
}